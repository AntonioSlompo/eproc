datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  REQUESTER
  APPROVER
}

enum RequisitionStatus {
  PENDING
  APPROVED
  REJECTED
  ORDERED
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?   // For email/password auth (hashed with bcrypt)
  image         String?
  role          Role      @default(REQUESTER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // App relations
  requisitions Requisition[]
}

model Requisition {
  id          String            @id @default(cuid())
  title       String
  status      RequisitionStatus @default(PENDING)
  requesterId String
  requester   User              @relation(fields: [requesterId], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  items RequisitionItem[]
}

model RequisitionItem {
  id            String      @id @default(cuid())
  requisitionId String
  requisition   Requisition @relation(fields: [requisitionId], references: [id], onDelete: Cascade)
  productId     String
  product       Product     @relation(fields: [productId], references: [id])
  quantity      Int
  price         Decimal
  total         Decimal?

  @@index([requisitionId])
  @@index([productId])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  sku         String?  @unique
  unitPrice   Decimal
  supplierId  String
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  requisitionItems RequisitionItem[]
}

// Enums for Supplier Management
enum PersonType {
  FISICA
  JURIDICA
}

enum TaxRegime {
  SIMPLES_NACIONAL
  LUCRO_PRESUMIDO
  LUCRO_REAL
}

enum IeIndicator {
  CONTRIBUINTE
  ISENTO
  NAO_CONTRIBUINTE
}

enum SupplierStatus {
  PENDING
  APPROVED
  BLOCKED
  SUSPENDED
}

model Supplier {
  id        String   @id @default(cuid())
  
  // 1. Identity
  type      PersonType @default(JURIDICA)
  document  String   @unique // CNPJ or CPF
  name      String   // Raz√£o Social / Nome Completo
  tradeName String?  // Nome Fantasia
  
  stateRegistration     String? // IE
  municipalRegistration String? // IM
  
  // CNAE (Economic Activity)
  cnaeMainCode String?
  cnaeMainDesc String?

  // 2. Location
  cep          String?
  street       String?
  number       String?
  complement   String?
  neighborhood String?
  city         String?
  state        String?
  latitude     Float?
  longitude    Float?

  // 3. Fiscal & Financial
  taxRegime      TaxRegime?
  ieIndicator    IeIndicator?
  paymentTerms   String? // e.g. "30 days"
  
  // 4. Categorization
  category   String? // e.g. "TI", "Limpeza"
  status     SupplierStatus @default(PENDING)
  rating     Float?
  website    String?
  notes      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  contacts     Contact[]
  bankAccounts BankAccount[]
  products     Product[]
}

model Contact {
  id         String   @id @default(cuid())
  supplierId String
  supplier   Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  
  name       String
  email      String?
  phone      String?
  role       String? // Comercial, Financeiro, Suporte
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([supplierId])
}

model BankAccount {
  id         String   @id @default(cuid())
  supplierId String
  supplier   Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  
  bankName   String
  agency     String
  account    String
  pixKey     String?
  pixKeyType String? // Email, CPF, Random, etc.
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([supplierId])
}
